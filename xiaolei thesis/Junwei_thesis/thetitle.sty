\def\maketitle{
   \titlepage
   \let\footnotesize\footnotesize %\let\footnoterule\relax
   \setcounter{page}{0}
   \begin{center}
    %\baselineskip 14.5pt
%    \vspace*{0.1in}
        {\Huge\bf\@title}\\[3ex]
    A \expandafter\@capitalize\@thesis, Presented\\
                   by    \\[3ex] 
                \@author \\[3ex] 
               to    \\
    The Graduate School \\ 
    in Partial Fulfillment of the \\
    Requirements \\
    for the Degree of\\
            {\bf\@degree} \\[3ex]
               in    \\[3ex]
            \@department\\[3ex]
        Stony Brook University\\[3ex]
            \@month\ \@year
    \end{center}
%    \par\null
    \endtitlepage
    \setcounter{footnote}{0} 
    \let\thanks\relax \let\maketitle\relax
}

